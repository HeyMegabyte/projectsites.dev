{
  "name": "@project-sites/worker",
  "version": "0.0.1",
  "description": "Project Sites Cloudflare Worker - API gateway and site delivery",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "build": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache src",
    "lint:fix": "eslint --cache --fix src",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@project-sites/shared": "workspace:*",
    "hono": "^4.4.0",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@swc/core": "^1.4.0",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "miniflare": "^3.20240129.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.44.0"
  }
}
