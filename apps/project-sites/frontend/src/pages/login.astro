---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialLinks from '../components/SocialLinks.astro';
import '../styles/global.css';
---

<BaseLayout
  title="Sign In - Project Sites"
  description="Sign in to Project Sites to manage your AI-generated website."
  canonicalPath="/login"
  noIndex={true}
>
  <header class="header">
    <div class="header-inner">
      <a class="logo" href="/">
        <img src="/logo-header.svg" alt="Project Sites" style="flex-shrink:0; height:auto; max-height:48px; max-width:300px;">
      </a>
    </div>
  </header>

  <div class="app">
    <div class="screen screen-signin active" style="display:flex;">
      <div class="signin-card">
        <h2>Sign in to claim your website</h2>
        <p class="signin-subtitle">Create your account to get started.</p>

        <div id="signin-methods" class="signin-methods">
          <button class="signin-btn signin-btn-google" id="google-signin-btn">
            <svg width="20" height="20" viewBox="0 0 48 48">
              <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
              <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
              <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
              <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
            </svg>
            Continue with Google
          </button>

          <div class="signin-divider">or</div>

          <button class="signin-btn" id="email-signin-toggle">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            Sign in with Email
          </button>
        </div>

        <div id="signin-email-panel" class="signin-panel" style="display:none;">
          <div id="email-step-input">
            <div class="input-group">
              <label for="email-input">Email Address</label>
              <input type="email" id="email-input" class="input-field" placeholder="you@example.com" inputmode="email" />
            </div>
            <button class="btn btn-accent btn-full" id="email-send-btn">
              Send Magic Link
            </button>
            <div id="email-send-msg" class="msg"></div>
          </div>

          <div id="email-step-sent" style="display:none;">
            <div class="msg msg-success visible" style="text-align:center; margin-top:12px;">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline-block; vertical-align:middle; margin-right:6px;">
                <rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
              Check your email for a sign-in link!
            </div>
          </div>

          <button class="back-link" id="email-back-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m15 18-6-6 6-6"/>
            </svg>
            Back to sign-in options
          </button>
        </div>

        <a href="/" class="back-link" style="margin-top:16px;">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"/>
          </svg>
          Back to home
        </a>
      </div>

      <div class="signin-footer">
        <div class="signin-footer-social">
          <SocialLinks />
        </div>
        <div class="signin-footer-legal">
          &copy; 2026 <a href="https://megabyte.space" target="_blank" rel="noopener noreferrer">Megabyte LLC</a>
          &middot; <a href="/privacy">Privacy</a>
          &middot; <a href="/terms">Terms</a>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    (function() {
      // Check if already logged in
      try {
        var session = JSON.parse(localStorage.getItem('ps_session') || 'null');
        if (session && session.token) {
          window.location.href = '/';
          return;
        }
      } catch(e) {}

      // Google sign-in
      document.getElementById('google-signin-btn').addEventListener('click', function() {
        var w = 500, h = 600;
        var left = (screen.width - w) / 2, top = (screen.height - h) / 2;
        var popup = window.open('/api/auth/google', 'GoogleSignIn', 'width=' + w + ',height=' + h + ',left=' + left + ',top=' + top);
        window.addEventListener('message', function handler(ev) {
          if (ev.data && ev.data.type === 'auth_success') {
            window.removeEventListener('message', handler);
            localStorage.setItem('ps_session', JSON.stringify(ev.data.session));
            window.location.href = '/';
          }
        });
      });

      // Email toggle
      var emailPanel = document.getElementById('signin-email-panel');
      var methods = document.getElementById('signin-methods');
      document.getElementById('email-signin-toggle').addEventListener('click', function() {
        methods.style.display = 'none';
        emailPanel.style.display = '';
      });
      document.getElementById('email-back-btn').addEventListener('click', function() {
        emailPanel.style.display = 'none';
        methods.style.display = '';
      });

      // Send magic link
      document.getElementById('email-send-btn').addEventListener('click', function() {
        var email = document.getElementById('email-input').value.trim();
        var msgEl = document.getElementById('email-send-msg');
        if (!email || !email.includes('@')) {
          msgEl.className = 'msg msg-error visible';
          msgEl.textContent = 'Please enter a valid email address.';
          return;
        }
        var btn = this;
        btn.disabled = true;
        btn.textContent = 'Sending...';
        fetch('/api/auth/magic-link', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: email }),
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.error) throw new Error(data.error.message || 'Failed to send');
          document.getElementById('email-step-input').style.display = 'none';
          document.getElementById('email-step-sent').style.display = '';
        })
        .catch(function(err) {
          msgEl.className = 'msg msg-error visible';
          msgEl.textContent = err.message;
          btn.disabled = false;
          btn.textContent = 'Send Magic Link';
        });
      });
    })();
  </script>
</BaseLayout>
