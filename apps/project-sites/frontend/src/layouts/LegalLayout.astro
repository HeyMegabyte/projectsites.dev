---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  pageTitle: string;
  lastUpdated: string;
}

const { title, description, canonicalPath, pageTitle, lastUpdated } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalPath={canonicalPath}>
  <Header />

  <div class="app">
    <div class="screen screen-legal active" style="padding: 40px 24px 80px; min-height: auto; justify-content: flex-start; align-items: flex-start;">
      <div class="legal-container">
        <a href="/" class="legal-back">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"/>
          </svg>
          Back to home
        </a>
        <h2>{pageTitle}</h2>
        <p class="legal-updated">Last updated: {lastUpdated}</p>
        <slot />
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>
